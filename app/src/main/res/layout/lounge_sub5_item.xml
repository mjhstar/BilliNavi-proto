<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:background="@drawable/home_style">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_margin="20dp"
            android:src="@drawable/icon_calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lounge_sub5_startDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.06.03"
                android:textColor="#123456"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/lounge_sub5_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textColor="#123456"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/lounge_sub5_finishDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.06.03"
                android:textColor="#123456"
                android:textSize="11sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/lounge_sub5_contest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="제7회 국토정중앙배 2019 전국당구 대회"
            android:textColor="@color/regular14"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
