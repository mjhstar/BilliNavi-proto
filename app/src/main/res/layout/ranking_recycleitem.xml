<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center_vertical"
    android:background="@drawable/stroke_bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/rankingNum_image"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/star_gold" />

        <LinearLayout
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rankingChange_image"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ranking_fix" />
        </LinearLayout>

        <TextView
            android:id="@+id/userID_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="타격슬램덩크"
            android:textColor="@color/regular14"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/winRate_text"
            android:text="0.789"
            android:textColor="@color/medium16"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>