<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_sub" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfdfdf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:gravity="center">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="8dp"
                    android:text="이메일주소(아이디)"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/edit_email_sub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="비밀번호"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/edit_pwd_sub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="비밀번호 확인"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/edit_pwdCheck_sub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="닉네임"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/edit_nickname_sub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="이름"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/eidt_name_sub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="생년월일"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext"
                        android:paddingLeft="10dp">

                        <Spinner
                            android:id="@+id/spinnerYear_sub"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:overlapAnchor="false"
                            android:textSize="14sp"></Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext"
                        android:paddingLeft="10dp">

                        <Spinner
                            android:id="@+id/spinnerMonth_sub"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:overlapAnchor="false"
                            android:textSize="14sp"></Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:paddingLeft="10dp">

                        <Spinner
                            android:id="@+id/spinnerDay_sub"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:overlapAnchor="false"
                            android:textSize="14sp"></Spinner>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="휴대폰 번호 인증"
                    android:textColor="#444444"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext"
                        android:paddingLeft="10dp">

                        <Spinner
                            android:id="@+id/spinnerPhone_sub"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:overlapAnchor="false"
                            android:textSize="14sp"></Spinner>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/secPhone_sub"
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/edittext"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/thrPhone_sub"
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/setting_btn1"
                    android:text="휴대폰 번호 인증"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:hint="인증번호 확인"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TableRow>

                        <CheckBox
                            android:id="@+id/checkbox1_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="이용약관 (필수)"
                            android:textColor="#444444"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/checkbox2_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="개인정보취급방침 (필수)"
                            android:textColor="#444444"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/buttonOK_sub"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/setting_btn2"
                    android:text="입력 완료"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
