<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".SignSub1">

    <include layout="@layout/toolbar_sub" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/sign_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:text="빌리내비 회원가입"
                android:textColor="#222222"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email_edit_sign1"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext"
                android:hint="이메일주소(아이디)"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pw_edit_sign1"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pw2_edit_sign1"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="회원가입을 하시면 개인별 경기기록 및 다양한 정보를"
                android:textColor="#444444"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="이용 하실 수 있습니다."
                android:textColor="#444444"
                android:textSize="11sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/setting_btn2"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>