<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9"
    android:fitsSystemWindows="true"
    tools:context=".SignSub1">
    <include layout="@layout/toolbar_sub"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:orientation="vertical"
            android:background="@drawable/sign_background"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빌리내비 회원가입"
                android:textSize="18sp"
                android:textColor="#222222"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:hint="이메일주소(아이디)"
                android:textColor="#444444"
                android:background="@drawable/edittext"
                android:inputType="textEmailAddress" />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:hint="비밀번호"
                android:textColor="#444444"
                android:background="@drawable/edittext"
                android:inputType="textPassword" />
            <EditText
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:hint="비밀번호 확인"
                android:textColor="#444444"
                android:background="@drawable/edittext"
                android:inputType="textPassword" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="11sp"
                android:textColor="#444444"
                android:text="회원가입을 하시면 개인별 경기기록 및 다양한 정보를"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:textColor="#444444"
                android:text="이용 하실 수 있습니다."/>
        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/setting_btn2"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:id="@+id/btn_sign"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:text="회원가입"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</LinearLayout>