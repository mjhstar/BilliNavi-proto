<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".SignSub5">

    <include layout="@layout/toolbar_sub" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9e9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/sign_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/email_edit_sign5"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:hint="이메일주소(아이디)"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/pw_edit_sign5"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_sign"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_btn2"
                    android:text="빌리내비 로그인"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sign_btn1"
                    android:text="빌리내비 회원가입"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/email_pw_find_btn"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sign_btn2"
                    android:text="이메일(아이디),비밀번호 찾기"
                    android:textColor="#444444"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sign_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:paddingTop="30dp"
                    android:text="SNS 계정으로 간편하게 로그인 하세요."
                    android:textColor="#222222"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sign_btn3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/sns_naver" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="네이버 로그인"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sign_btn3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/sns_kakao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="카카오계정 로그인"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sign_btn3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/sns_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="구글계정 로그인"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sign_btn3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/sns_facebook" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="페이스북 로그인"
                        android:textColor="#444444"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>