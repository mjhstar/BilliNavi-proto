<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#e9e9e9"
    android:orientation="vertical">
    <include layout="@layout/toolbar_sub"/>
    <ScrollView
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="빌리내비 회원탈퇴"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원 정보 및 개인 이용기록 삭제 안내"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222222"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#444444"
                    android:textSize="11sp"
                    android:text="회원 정보 및 개인 이용기록은 모두 삭제되며, 삭제된 데이터는 복구할 수 없습니다."/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인형 서비스 이용기록 및 내 정보 삭제 안내"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222222"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#444444"
                    android:textSize="11sp"
                    android:text="개인형 서비스 이용기록 및 내 정보가 모두 삭제되며, 삭제된 데이터는 복구할 수 없습니다.\n삭제되는 데이터를 확인하시고, 필요한 데이터는 회원탈퇴 전에 백업을 해주세요."/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시판형 서비스에 등록한 게시글 삭제 불가 안내"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222222"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#444444"
                    android:textSize="11sp"
                    android:text="탈퇴 후에는 회원 정보가 삭제되어 본인 여부를 확인할 수 있는 방법이 없기 때문에, 게시글을 임의로 삭제할 수 없습니다.\n삭제를 원하는 게시글이 있다면 반드시 회원탈퇴 전에 삭제하시기 바랍니다."/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:button="@drawable/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:onClick="checkbox_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안내사항을 모두 확인하였으며, 이에 동의합니다."
                    android:textSize="12sp"
                    android:textColor="#444444"/>

            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/setting_btn2"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:id="@+id/next"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:text="회원탈퇴"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>