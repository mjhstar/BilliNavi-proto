<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_sub"/>

    <ScrollView
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:paddingTop="30dp"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일주소(아이디)"
                    android:textSize="10sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/email_sign8"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="14sp"
                    android:background="@drawable/edittext"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#444444"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호" />

                <EditText
                    android:id="@+id/pw_sign8"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="textPassword" />


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#444444"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름" />

                <EditText
                    android:id="@+id/name_sign8"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:inputType="text" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#444444"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="휴대폰 번호 인증" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/edittext">
                        <Spinner
                            android:overlapAnchor="false"
                            android:id="@+id/spinnerPhone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="14sp"></Spinner>
                    </LinearLayout>


                    <EditText
                        android:id="@+id/secPhone_sign8"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext"
                        android:layout_marginRight="10dp"/>

                    <EditText
                        android:id="@+id/thrPhone_sign8"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:layout_width="103dp"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext" />
                </LinearLayout>

                <Button
                    android:background="@drawable/setting_btn1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="휴대폰 번호 인증" />

                <EditText
                    android:paddingLeft="20dp"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext"
                    android:hint="인증번호 확인" />

                <Button
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sign_btn1"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:id="@+id/leave"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:text="회원탈퇴"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
